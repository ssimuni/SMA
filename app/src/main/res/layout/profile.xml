<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/profile.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/wave">

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCardView"
        android:layout_width="300dp"
        android:layout_height="600dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/profileImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="28dp"
                android:contentDescription="@string/profile_picture" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="16dp"
                android:text="Name"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Address"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/workstationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Work station"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/blood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Blood Group"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/designationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Designation"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/directorate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Directorate"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Department"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Division"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="District"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/upozila"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Upazila"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="Email"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/nidTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="8dp"
                android:text="NID"
                android:textColor="@color/basic"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dobTextView"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Date of Birth"
                android:textColor="@color/basic"
                android:textSize="15sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/profileCardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/basic"
            android:textSize="15sp"
            app:cornerRadius="20dp"
            android:text="@string/logout"
            android:layout_marginEnd="10dp" />

        <Button
            android:id="@+id/update"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:backgroundTint="@color/basic"
            android:textSize="15sp"
            app:cornerRadius="20dp"
            android:text="Update" />
    </LinearLayout>
</RelativeLayout>
